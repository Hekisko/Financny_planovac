<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_weight="8"
                android:id="@+id/trvaly_prikaz_item_suma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TU BUDE SUMA"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/blue_200"/>

            <ImageView
                android:id="@+id/trvaly_prikaz_item_icon"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/ic_food"/>

            <ImageButton
                android:id="@+id/trvaly_prikaz_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:src="@drawable/ic_delete_smaller"
                app:tint="@color/red_800"

                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/trvaly_prikaz_item_den_splatnosti" />

            <TextView
                android:id="@+id/trvaly_prikaz_item_den_splatnosti"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="26."
                android:layout_marginStart="30dp"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/trvaly_prikaz_item_poznamka_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/trvaly_prikaz_item_poznamka" />


            <TextView
                android:id="@+id/trvaly_prikaz_item_poznamka"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="poznamka"
                android:layout_marginStart="30dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/trvaly_prikaz_item_datum_pridania" />


            <TextView
                android:id="@+id/trvaly_prikaz_item_den_pridania"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="den pridania"
                android:layout_marginStart="30dp"/>


        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>